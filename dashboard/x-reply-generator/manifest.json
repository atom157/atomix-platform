{
  "manifest_version": 3,
  "name": "AtomiX â€” AI Replies for X",
  "version": "2.0.0",
  "description": "Atom-powered AI replies for X (Twitter). Generate smart, human-like responses in one click.",
  "homepage_url": "https://atomix.guru",
  "privacy_policy": "https://atomix.guru/privacy-policy",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://atomix.guru/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "externally_connectable": {
    "matches": [
      "https://atomix.guru/*"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    },
    {
      "matches": [
        "https://atomix.guru/auth/extension-connected*"
      ],
      "js": [
        "extension-auth.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}